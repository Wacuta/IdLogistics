{% extends 'contenu/contenu.twig' %}

	{% block head %}

	<!--SpreadJS Widgets CSS-->
	<link rel="stylesheet" type="text/css" href="../css/SpreadJS/jquery.wijmo.wijspread.3.20151.16.css">
	
	<!--SpreadJS Widgets JavaScript-->
	<script src="../js/SpreadJS/jquery.wijmo.wijspread.all.3.20151.16.min.js" type="text/javascript"></script>
	
	{% endblock %}

	{% block style %}

		nav{
			background-color: #388e3c;
		}
		
		#formule,
		#cell_select{
			border: 1px solid #9F9999;
		}

		.row{
			margin-top: 10px; 
			margin-bottom:5px;
		}

		table tbody tr td {
			padding:0px;
			border:1px;
		}
		
		.input-field{
			margin-top:0px;
		}

		form{
			margin:0px;
		}

		#cell_select{
			margin:0px;
			padding-top:10px;
			padding-bottom:10px;
		}

		.separe{
			border-right: 1px solid #9F9999;
			height:119px;
		}

		form table tbody tr td {
			padding:10px;
			padding-right:20px;
		}

		#application_excel{
			margin-left:10%;
			margin-right:10%;
		}


	{% endblock %}
	

	{% block titre %} Excel {% endblock %}


	{% block contenu %}

	{% endblock %}


	{% block table %}

	
	<div id="application_excel">
		<h1 class="center-align">Démonstration</h1>
		<blockquote>
			<h3>Attention !</h3>
			Le tableur ci-dessous n'est qu'une simple représentaion  <u>anglaise</u> du logiciel Excel.
		</blockquote>
		
		<div class="valign-wrapper row" id="formule">
			<div class="valign col s2">
				<p class=" center-align" id="cell_select">A1</p>
			</div>
			<div class=" valign col s10">
				<form id="formid">
		          <div class="input-field">
		          	<i class="mdi-editor-functions prefix"></i>
		            <input id="fonction" type="text" autocomplete="off">
		          </div>
				</form>
			</div>
		</div>
		
		<!-- Le tableur -->
		<div id="ss" style="width:100%;height:300px;" class="center"></div>

	</div>

	{% endblock %}



    {% block foot %}

	<script src="../js/contenu/excel.js"></script>

	{% endblock %}
